<% provide(:title, @user.name) %>
<div class="row">
    <aside class="span4 well">
        <section>
            <% if flash[:notice] %>
                <div class="alert alert-success">
                    <%= flash[:notice] %>
                </div>
            <% end %>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <p>
                <%= @user.email %>
            </p>
        </section>
    </aside>
</div>
